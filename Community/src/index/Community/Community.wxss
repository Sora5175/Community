page{
  background-color: rgb(240, 240, 240);
}
view{
  background-color: white;
  width: 100%;
}
#communityIndex{
   border-bottom: 2.34rpx solid #EBEBEB;
}
.communityIndex{
  width: 140rpx;
  height: 200rpx;
  margin-left: 19rpx; 
  margin-right: 19rpx; 
  display: inline-block;
  text-align: center;
  color: rgb(100, 100, 100);
}
.communityIndex:first-child{
  margin-left: 38rpx; 
}
.communityIndex:last-child{
  margin-right: 38rpx; 
}
.communityIndex>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  margin: 0 10rpx;
}
.communityIndex>label{
  font-size: 23rpx;
}
#NoticeIndex{
  width: 200rpx;
  color: white;
  border-radius: 30rpx;
  padding: 20rpx 0rpx 0rpx 20rpx;
  margin:25rpx auto;
  display: flex;
  text-align: center;
  justify-content: center;
}
#Notice{
  font-size: 25rpx;
  line-height: 25rpx;
}
#NoticeIndex>image{
  width: 45rpx;
  height: 45rpx;
  position: relative;
  bottom: 12rpx;
}
.NoticeIndex{
  background-color: rgba(0, 0, 0, 0.5);
}
.NoticeIndex_hover{
  background-color: rgba(0, 0, 0, 0.7);
}
#content{
  background-color: rgba(0, 0, 0, 0);
}
.message{
  margin: 30rpx 0rpx;
  border: 2.34rpx solid rgb(230, 230, 230);
}
.messageHeader{
  width: 690rpx;
  height: 105rpx;
  padding: 30rpx 30rpx;
}
.messageHeader>image{
  width:105rpx;
  height:105rpx;
  border-radius:100%;
  margin-right: 20rpx;
  float: left;
}
.messageName{
  font-size: 45rpx;
  line-height: 105rpx;
  float: left;
}
.messageTime{
  font-size: 30rpx;
  line-height: 105rpx;
  color:rgb(150, 150, 150);
  float: right;
}
.messageContent{
  width: 690rpx;
  padding: 0rpx 30rpx;
}
.messageContent>label{
  font-size: 35rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:4;
  -webkit-box-orient:vertical;
}
.messageImg{
  width: 690rpx;
}
.messageImg>image{
  width: 690rpx;
  border-radius: 15rpx;
  margin-top: 20rpx;
}
.messageType{
  color:rgb(30, 30, 30);
  font-size: 35rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2.34rpx solid rgb(230, 230, 230);
}
.messageAction{
  width: 690rpx;
  height: 60rpx;
  padding: 25rpx 30rpx; 
}
.messageAction>image{
  width: 45rpx;
  height: 45rpx;
  margin: 0rpx 20rpx;
}
.messageAction>label{
  font-size: 35rpx;
  line-height: 45rpx;
  color: rgb(150, 150, 150);
  position: relative;
  bottom: 8rpx;
  margin-right: 20rpx;
}
