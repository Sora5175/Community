page{
  background-color: rgb(240, 240, 240);
}
view{
  background-color: white;
  width: 100%;
  display:flex;
}
swiper{
  width: 100%;
  height: 268.75rpx;
}
.slide-image{
  width: 750rpx;
  height: 268.75rpx;
}
#index{
  border-top: 2.34rpx solid #EBEBEB;
  border-bottom: 2.34rpx solid #EBEBEB;
}
.index{
  width: 140rpx;
  margin-left: 19rpx; 
  margin-right: 19rpx; 
  display: inline-block;
  text-align: center;
  color: rgb(100, 100, 100);
  margin-top: 11.7rpx;
  margin-bottom: 11.7rpx;
}
.index:first-child{
  margin-left: 38rpx; 
}
.index:last-child{
  margin-right: 38rpx; 
}
.index>image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  margin: 0rpx 11.7rpx;
  margin-top:23.4rpx;
}
.index>label{
  font-size: 23.4rpx;
}
#content{
  background: rgba(0,0,0,0);
  display: block;
}
.message{
  background-color: rgba(0, 0, 0, 0);
  width: 656rpx;
  margin: 0rpx auto;
  margin-top: 35rpx;
  display: block;
}
.messageTime{
  background-color: rgba(0, 0, 0, 0);
  text-align: center;
}
.messageTime>label{
  width: auto;
  font-size: 25rpx;
  color: rgb(90,90,90);
  border-radius: 15rpx;
  padding: 10rpx 20rpx 10rpx 20rpx;
  margin: 0 auto;
}
.messageView{
  margin-top: 10rpx;
  border: 2.34rpx solid #EBEBEB;
  border-radius: 11.7rpx;
  box-shadow: 0rpx 2.34rpx 7.02rpx rgba(34, 25, 25, 0.2);
  display: block;
}
.messageHeader{
  width: 626rpx;
  padding: 15rpx;
  border-top-left-radius: 11.7rpx;
  border-top-right-radius: 11.7rpx;
}
.messageHeader>label{
  font-size: 42.12rpx;
  float: left;
}
.messageContent{
  width: 626rpx;
  padding: 15rpx;
  border-bottom-left-radius: 11.7rpx;
  border-bottom-right-radius: 11.7rpx;
}
.messageContent>label{
  text-indent:2em;
  font-size: 32.76rpx;
  color: rgb(150, 150, 150);
  float: left;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}