page{
  background-color: rgb(240, 240, 240);
}
view{
  background-color: white;
  width: 100%;
}
#messageHeader{
  height: 187rpx;
  border-bottom: 2.34rpx solid #EBEBEB;
}
#messageHeader>label{
  margin: 0rpx 47rpx;
}
#messageIndex{
  width: 656rpx;
  margin: 25rpx auto;
  border-radius: 11.7rpx;
  position: relative;
  bottom: 130rpx;
  box-shadow: 0rpx 2.34rpx 7.02rpx rgba(34, 25, 25, 0.2);
}
.messageIndex{
  width: 140rpx;
  height: 200rpx;
  margin-left: 29.5rpx; 
  margin-right: 29.5rpx; 
  display: inline-block;
  text-align: center;
  color: rgb(100, 100, 100);
}
.messageIndex:first-child{
  margin-left: 59rpx; 
}
.messageIndex:last-child{
  margin-right: 59rpx; 
}
.messageIndex>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  margin: 0 15rpx;
  margin-top:25rpx;
}
.messageIndex>label{
  font-size: 23.4rpx;
}
#messageContent{
  position: relative;
  bottom: 120rpx;
}
.messageDialog{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 2.34rpx solid #EBEBEB;
}
.messageDialog>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  margin:0rpx 15rpx;
}
.dialog{
  width: 560rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: inline-block;
  position: relative;
  top: 10rpx;
}
.dialogHeader{
  width: 560rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.dialogContent{
  width: 560rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.dialogName{
  font-size: 37rpx;
  float: left;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.dialogTime{
  font-size: 24rpx;
  color: rgb(150, 150, 150);
  float: right;
}
.dialogContent>label{
  width: 560rpx;
  font-size: 33rpx;
  color: rgb(150, 150, 150);
  float: left;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}