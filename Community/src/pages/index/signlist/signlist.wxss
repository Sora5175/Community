page{
  background-color: rgb(240, 240, 240);
}
.header{
  margin: 30rpx 0rpx;
  padding: 20rpx 30rpx;
  background-color: white;
}
.check>input{
  width: 560rpx;
  line-height: 120rpx;
  display: inline-block;
}
.checkAction{
  line-height: 120rpx;
  display: inline-block;
  float: right;
}
.startSign{
  background-color: red;
  color: white;
}
.body>.top{
  width: 680rpx;
  padding: 0rpx 35rpx;
  background-color: white;
}
.content{
  background-color: white;
}
.course{
  padding: 0rpx 35rpx;
  line-height: 120rpx;
  border-top:1px solid rgb(230, 230, 230);
}
.view_hover{
  background-color: rgb(230, 230, 230);
}
.top>.title{
  width: 590rpx;
  display: inline-block;
  line-height: 90rpx;
}
.top>.addCourse{
  background-color: rgba(0,0,0,0);
  width: 56rpx;
  height: 56rpx;
  line-height: 58rpx;
  padding: 0rpx;
  margin: 16rpx;
  border-radius: 0rpx;
  display: inline-block;
  float: right;
}
.lid{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  background-color:rgba(0,0,0,0.3);
  z-index: 10;
}
.tip{
  background-color: white; 
  width: 690rpx;
  margin: 40% 30rpx;
  border: 1rpx solid rgb(230, 230, 230);
  border-radius: 15rpx;
}
.tip_header{
  border-bottom: 1rpx solid rgb(230, 230, 230);
  padding:30rpx 30rpx;
}
.tip_body{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}
.tip_footer>button{
  width: 345rpx;
  display: inline-block;
  border: none;
}
.confirm{
  color: rgb(0, 255, 42) !important;
}
.cancel{
  float: right;
  color:rgb(158, 147, 147) !important;
}
.course_name{
  border: 1rpx solid rgb(230, 230, 230);
  height: 2rem;
  padding: 0rpx 10rpx;
}
.uId,.name,.absenceNum,.attendenceNum{
  display: inline-block;
  text-align: center;
  width: 25%;
}