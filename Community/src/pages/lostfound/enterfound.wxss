@media screen and (max-width: 330px){
  .label_set{
    width: 40px;
    height: 126px;
  }
  .label_set>label,.label_set>label:last-child{
    left: 10px;
  }
}
@media screen and (min-width: 370px){
  .label_set{
    width: 90px;
    height: 126px;
  }
  .label_set>label,.label_set>label:last-child{
    left: 60px;
  }
}
@media screen and (min-width: 400px){
  .label_set{
    width: 120px;
    height: 126px;
  }
  .label_set>label,.label_set>label:last-child{
    left: 90px;
  }
}
.label_set>label{
  display: block;
  width: 80px;
  height: 30px;
  position: relative;
  top: 23px;
  background-color: white;
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
}
.label_set>label:last-child{
  top: 41px;
}
.label_set view{
  /* background-color: rgb(194, 224, 217); */
  height: 30px;
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
}
.hover-view{
  background-color: rgb(194, 224, 217);
}