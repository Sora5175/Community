/* community/src/pages/lostfound/enterlost.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page{
  height: 100%;
  width: 100%;
}
.container{
  height: 100%;
  padding:0;
  /* font-size:14rpx; */
  color:#000;
  display:flex;
  flex-direction:column;
  align-items:center;
  box-sizing:border-box;
  background:#F0F4F3;
}
.content{
  width: 96%;
  height: 103px;
  padding-left: 2%;
  padding-right: 2%;
  background-color: white;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
}
.left{
  width: 103px;
  height: 103px;
  display: inline-block;
}
.left>image{
  height: 90%;
  width: 90%;
  margin: 5% 5% 5% 5%;
}
.right{
  height: 103px;
  width: 68%;
}
.right>label{
  font-size: 12px;
  color: gray;
  margin-left: 5px;
  display: block;
  margin-top: 5px;
}
#btn{
  font-size: 20px;
  color: black;
  margin-top: 10px;
  margin-left: 5px;
  height: 18px;
  display: inline-block;
}
icon{
  display: inline-flex;
}
.load{
  width: 100%;
  height: 5%;
  margin-top: 5px;
  background-color: white;
}
.load>label{
  text-align: center;
  font-weight: 10px;
  font-size: 20px;
  display: block;
  color:rgb(49, 52, 54);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}