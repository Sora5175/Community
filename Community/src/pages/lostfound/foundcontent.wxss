/* community/src/pages/lostfound/foundcontent.wxss */
page{
  height: 100%;
  width: 100%;
}
.feed-source{
  width:230px;
  height:80rpx;
  display: inline-block;
  margin-left: 10px;
  margin-top: 5px;
}
.feed-source text{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}
.avatar{
  position:relative;
  display:inline-block;
}
.avatar>image{
  display:inline-block;
  width:80rpx;
  height:80rpx;
  border-radius:45rpx;
  top:10rpx;
  vertical-align:middle;
  overflow:hidden;
}
.content{
  width: 100%;
  display: flex;
  flex-direction:column;
  margin-top: 10px;
  background-color: #f0f4f3;
}
.describe{
  background-color: white;
  padding-left: 10px;
  padding-right: 10px;
  min-height: 110px;
}
.describe>text{
  width: 100%;
  display: inline-block;
  font-size: 38rpx;
  font-weight: 600px;
  line-height: 40rpx;
  word-break: keep-all;
  word-wrap: break-word;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:6;
  -webkit-box-orient:vertical;
}
.img{
  margin-top: 10px;
  width: 100%;
  height: 320px;
  margin-bottom: 10px;
}
.img>image{
  width: 100%;
  height: 100%;
}
.tip{
  width: 100%;
  height: 5%;
  background-color: white;
  display: flex;
  flex-direction: row;
}
.tip>label{
  /* float:left; */
  color:gray;
  font-size: 15px;
}
